{
  "manifest_version": 2,
  "name": "amo-dic",
  "version": "1.0",
  "description": "a dic tool for translating English to Chinese.",
  "homepage_url": "https://github.com/tolerious/amo-dic",
  "icons": {
    "48": "icons/dic.jpg"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>"
  ],
  "browser_action": {
    "default_icon": "icons/dic.png",
    "default_title": "amo-dic",
    "default_popup": "popup/dic_popup.html"
  },
  "background": {
    "scripts": [
      "background-script.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/jquery.min.js",
        "js/crypto-js.js",
        "content-script.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "images/dic.png",
    "fake/laba.png",
    "fake/love.png"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'; media-src 'self' 'https://citydomain.com/'"
}
